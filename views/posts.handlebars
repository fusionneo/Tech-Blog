{{#each posts as |post| }}
<div class="row mb-4">
    <div class="col-md-5">
        <h2>
            <a href="/posts/{{post.id}}">{{post.title}}</a>
        </h2>
        <p>{{post.user.username}} {{format_date post.date_created}}</p>
    </div>
    <div class="col-md-7">
        <p>
            {{post.content}}
        </p>
    </div>
</div>
{{/each}}